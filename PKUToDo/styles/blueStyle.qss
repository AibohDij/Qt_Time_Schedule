QTableView {
    background-color: #f5f5f5; /* 表格背景颜色 */
    border: 1px solid #ccc;    /* 表格边框 */
    border-radius: 10px;       /* 表格圆角 */
    padding: 5px;              /* 表格内边距 */
}

/* 设置表头的样式 */
QHeaderView::section {
    background-color: #d3d3d3; /* 表头背景颜色 */
    color: #333;               /* 表头文字颜色 */
    border: 1px solid #aaa;    /* 表头边框 */
    font-family: Arial, sans-serif; /* 表头字体 */
    font-size: 12pt;           /* 表头字体大小 */
    padding: 4px;              /* 表头内边距 */
}

/* 设置单元格样式 */
QTableView::item {
    background-color: #fff;    /* 单元格背景颜色 */
    color: #000;               /* 单元格文字颜色 */
    border-radius: 1px solid #ddd;    /* 单元格边框 */
    font-family: Arial, sans-serif; /* 单元格字体 */
    font-size: 11pt;           /* 单元格字体大小 */
}

/* 设置交替行背景颜色 */
QTableView::item:alternate {
    background-color: #f9f9f9; /* 交替行背景颜色 */
}

/* 设置选中行样式 */
QTableView::item:selected {
    background-color: #87CEFA; /* 选中行背景颜色 */
    color: #fff;               /* 选中行文字颜色 */
}

