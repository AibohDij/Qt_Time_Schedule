/* 设置 QPushButton 的样式 */
QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                             stop: 0 #3498db, stop: 1 #87CEFA); /* 渐变淡蓝色背景 */
    color: white; /* 文字颜色 */
    border: 2px solid transparent; /* 透明边框，用于应用渐变 */
    border-radius: 10px; /* 圆角 */
    padding: 5px 10px; /* 内边距 */
    font-size: 15px; /* 字体大小 */
    font-weight: bold;
    font-family:  "STFangsong", sans-serif;
    background-origin: border-box;
    background-clip: padding-box, border-box;
    background-image: linear-gradient(white, white), linear-gradient(to right, #87CEFA, #5DADE2); /* 渐变背景 */
}

/* 鼠标悬停时的样式 */
QPushButton:hover {
    background-color: #5DADE2; /* 背景色改变 */
}

/* 鼠标按下时的样式 */
QPushButton:pressed {
    background-color: #3498db; /* 背景色改变 */
    border: 2px solid #1E90FF; /* 边框色改变 */
}



